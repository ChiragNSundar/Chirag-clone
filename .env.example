# Flask Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# LLM Provider (gemini, openai, anthropic, ollama)
# Gemini is primary, OpenAI is automatic fallback
LLM_PROVIDER=gemini

# Gemini API (Primary - get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (Fallback)
OPENAI_API_KEY=sk-your-openai-key-here

# For local Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Model Selection
# Advanced Fallback Hierarchy: Gemma 2 -> Gemini 2.0 Flash Lite -> Gemini 2.0 Flash -> Gemini 2.0 Pro
GEMINI_MODEL=gemini-2.0-flash
OPENAI_MODEL=gpt-4o-mini

# Your Identity - THIS IS WHO THE BOT BECOMES
BOT_NAME=Chirag
USER_NAME=User

# Social Autopilot (optional)
# Discord: Create bot at https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# Telegram: Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Training Center Security
TRAINING_PASSCODE=1234

